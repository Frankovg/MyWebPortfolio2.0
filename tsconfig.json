{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/public/*": [
        "./public/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/actions/*": [
        "./src/actions/*"
      ],
      "@/context/*": [
        "./src/context/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/icons/*": [
        "./src/icons/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
